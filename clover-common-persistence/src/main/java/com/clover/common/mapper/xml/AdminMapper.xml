<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clover.common.mapper.AdminMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.clover.common.entity.Admin">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="role_id" property="roleId"/>
        <result column="status" property="status"/>
        <result column="note" property="note"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, gender, phone, email, role_id AS roleId, status, create_by AS createBy,create_time AS createTime, update_by AS updateBy,update_time AS updateTime, del_flag AS delFlag
    </sql>


    <resultMap id="UserModel" type="com.clover.common.entity.Admin">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="role_id" property="roleId"/>
        <result column="status" property="status"/>
        <result column="note" property="note"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
        <result column="role_name" property="roleName"/>
    </resultMap>


    <!-- 等同于编写一个普通 list 查询，mybatis-plus 自动替你分页 -->
    <select id="selectPageByConditionUser" resultMap="UserModel">
        select u.*,r.role_name from admin u,role r
        where u.role_id =r.id
        <if test="info != null and info != '' ">
            and (u.phone like concat('%',#{info},'%') or u.username like concat('%',#{info},'%'))
        </if>
        <if test="startTime != null and startTime != '' and endTime != null and endTime != '' ">
            and u.create_time between #{startTime,jdbcType=BIGINT} and #{endTime,jdbcType=BIGINT}
        </if>
        and u.status in
        <foreach item="item" index="index" collection="status"
                 open="(" separator="," close=")">
            #{item}
        </foreach>
        ORDER BY u.create_time DESC
    </select>

</mapper>
