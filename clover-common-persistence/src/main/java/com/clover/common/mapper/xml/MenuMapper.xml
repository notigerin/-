<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clover.common.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.clover.common.entity.Menu">
        <id column="permissions_id" property="permissionsId" />
        <result column="parent_id" property="parentId" />
        <result column="name" property="name" />
        <result column="level" property="level" />
        <result column="flag" property="flag" />
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        permissions_id AS permissionsId, parent_id AS parentId, name, level, flag, create_by AS createBy,create_time AS createTime, update_by AS updateBy,update_time AS updateTime, del_flag AS delFlag
    </sql>

    <!-- 根据角色查询权限-->
    <select id="findMenuByRoleCode" resultMap="BaseResultMap">
        select m.* from permissions m LEFT JOIN role_to_permissions r on r.permissions_id= m.permissions_id
        WHERE
        1 = 1
        <if test=" roleId !=null and roleId !=''">
            AND r.role_id = #{roleId}
        </if>
    </select>
</mapper>